root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_style = space
indent_size = 2
max_line_length = 120

[*.js]
indent_style = space
indent_size = 2

[*.md]
indent_style = tab
indent_size = tab
max_line_length = 80

[*.go]
max_line_length = 120
